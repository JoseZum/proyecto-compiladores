import java_cup.runtime.*;

parser code {:
    public void syntax_error(Symbol s) {
        System.err.println("Error de sintaxis en línea " + s.left);
    }
:}

/* Terminales */
terminal WORLD, ENDL, INT_TYPE, ASSIGN;
terminal Integer INT_LIT;
terminal String ID;

/* No terminales */
non terminal program;
non terminal statement;

/* Gramática */
start with program;

program ::= WORLD statement
          ;

statement ::= INT_TYPE ID ASSIGN INT_LIT ENDL
            ;
